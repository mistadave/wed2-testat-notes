<h3>Edit note</h3>
<div class="flex-order">
    <form>
        {{#if note}}
            <div class="">
                <label>Titel</label>
                <input type="text" name="title" value="{{note.title}}">
            </div>
            <div class="">
                <label>Beschreibung</label>
                <textarea name="description">{{note.description}}</textarea>
            </div>
            <div class="">
                <label>Wichtigkeit: </label>
                <select name="importance">
                    {{#dropimportance note.importance}}

                    {{/dropimportance}}
                    <!--<option selected="selected">
                        {{note.importance}}
                    </option>-->
                </select>

            </div>
            <div>
                <label>Fertig bis:</label>
                <input type="date" name="dueToDate" value="{{note.dueToDate}}">
            </div>
            <div class="">
                <label>Status</label>
                <input type="checkbox" name="done" {{#if note.done}}checked{{/if}}><label>Erledigt!</label>
            </div>
            <div class="">
                <button class="button" type="submit" formaction="/notes/edit/{{note._id}}" formmethod="post">Update
                </button>
                <button class="button" type="submit" formaction="/" formmethod="get">Back</button>
            </div>
        {{else}}
            <div class="">Keine Todo gefunden!</div>
        {{/if}}
    </form>
</div>