<div class="navigation">
    <h3>Willkommen! Zu der besten Note App auf der Welt! Juhuu</h3>
    <form>
        <div class="">
            <button class="button" type='submit' formaction="/notes/new" formmethod="get">Create new Note</button>
            <select class="button right" name="style">
                <!-- onchange="this.form.action='/changeStyle'; this.form.method='post'; this.form.submit();"-->
                {{#renderStyle style}}{{/renderStyle}}
            </select>
            <button class="button right" type="submit" formaction="/changeStyle" formmethod="post">Style-Switcher
            </button>
        </div>
        <div style="float:left;"></div>
        <div class="">
            <button class="button" type="submit" formaction="/sortNotes/dueToDate" formmethod="get">By finish Date
            </button>
            <button class="button" type="submit" formaction="/sortNotes/addDate" formmethod="get">By created Date
            </button>
            <button class="button" type="submit" formaction="/sortNotes/importance" formmethod="get">By Importance
            </button>

            <button class="button right" type="submit" formaction="/sortNotes/done" formmethod="get">{{#if done}}
                Show All{{else}}Show finished{{/if}}
            </button>
        </div>
    </form>
</div>

<div class="notes">
    <h3>Notes</h3>
    <form>
        {{#if notes}}
            {{#each notes}}
                <div class="inline-box">
                    <div class="box box-left">
                        <!--<input disabled type="checkbox" name="done" {{#if
                                done}}checked{{/if}}><label>Finished</label>-->
                        <label class="switch">
                            <input disabled type="checkbox" {{#if done}}checked{{/if}}>
                            <div class="slider round"></div>
                        </label>
                    </div>
                    <div class="box box-middle">
                        <span>{{title}}</span>
                        <span class="right">{{#stars importance}}{{/stars}}</span>
                        <textarea type="text" readonly>{{description}}</textarea>
                    </div>
                    <div class="box box-right">
                        <button class="button" type="submit" formaction="/notes/{{_id}}" formmethod="get">Edit</button>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <div class="nothing">Keine Todos vorhanden!</div>
        {{/if}}
    </form>
</div>