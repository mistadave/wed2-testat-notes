<div class="notes">
<h3>Notes</h3>
    <form>
        <!-- TODO: if not working and why empty already 4 iterations? -->
        {{#if notes}}
            {{#each notes}}
                <div class="inline-box">
                    <div class="box box-left">
                        <input type="checkbox"><label>Finished</label>
                    </div>
                    <div class="box box-middle">
                        {{title}}
                        <span class="right">{{importance}}</span>
                        <input type="text" value="{{description}}" readonly>
                    </div>
                    <div class="box box-right">
                        <button class="button" type="submit" formaction="/notes/{{_id}}" formmethod="get">Edit</button>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <div class="">No data yet</div>
        {{/if}}
    </form>
</div>