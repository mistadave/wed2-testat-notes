<h3>Notes</h3>
<div class="">
    <form>
        <!-- TODO: if not working and why empty already 4 iterations? -->
        {{#if this}}
            {{#each this}}
                <div class="">
                    <input type="checkbox"><label>Finished</label>
                </div>
                <div class="">
                    {{title}}
                </div>
                <div class="">
                    <input type="text" value="{{description}}" readonly>
                </div>
                <div class="">
                    {{importance}}
                </div>
                <div class="">
                    <button type="submit" formaction="/editNote" formmethod="post">Edit</button>
                </div>
            {{/each}}
